<div class="chat-top">
  <div class="left-header">
    <div class="header-title">hogefuga</div>
  </div>
  <div class="right-header">
    <div class="header-btn">
      <a href="#">チャットを終了する</a>
    </div>
  </div>
</div>

<div class="chat-middle">
  <div class="dates">
    <div class="date">
      <div class="upper-message">
        <div class="user-name">
          Tom
        </div>
        <div class="time">
          2020/3/31(Wed) 12:43:30
        </div>
      </div>
      <div class="lower-message">
        <div class="text">
          おはよう
        </div>
      </div>
    </div>

    <div class="date">
      <div class="upper-message">
        <div class="user-name">
          Sim
        </div>
        <div class="time">
          2020/3/31(Wed) 12:43:30
        </div>
      </div>
      <div class="lower-message">
        <div class="text">
          こんにちは
        </div>
      </div>
    </div>

  </div>
</div>
<%= form_with model: [@room, @message], class: 'chat-bottom', local: true do |f| %>
  <div class="form-input">
    <%= f.text_field :content, class: 'free-text', placeholder: 'type a message' %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %> 
    </label>
  </div>
  <%= f.submit '送信', class: 'send-btn' %>
<% end %>
